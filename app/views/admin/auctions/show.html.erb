<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-6">
      <%= link_to admin_auctions_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        목록으로 돌아가기
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- 경매 상세 정보 -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="p-6">
            <div class="flex items-start justify-between mb-6">
              <div>
                <h1 class="text-2xl font-bold text-gray-900 mb-2">
                  <%= @auction.vehicle.title %>
                </h1>
                <div class="flex items-center space-x-4">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case @auction.status
                        when 'active' then 'bg-green-100 text-green-800'
                        when 'upcoming' then 'bg-yellow-100 text-yellow-800'
                        when 'ended' then 'bg-red-100 text-red-800'
                        when 'paid' then 'bg-blue-100 text-blue-800'
                        when 'completed' then 'bg-purple-100 text-purple-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= case @auction.status
                        when 'active' then '진행 중'
                        when 'upcoming' then '예정'
                        when 'ended' then '종료'
                        when 'paid' then '결제 완료'
                        when 'completed' then '완료'
                        else @auction.status
                        end %>
                  </span>
                </div>
              </div>
              <div class="text-right">
                <div class="text-sm text-gray-500">현재가</div>
                <div class="text-3xl font-bold text-green-600">
                  <%= format_price(@auction.current_price) %>
                </div>
              </div>
            </div>

            <!-- 차량 정보 -->
            <div class="border-t border-gray-200 pt-6 mb-6">
              <h2 class="text-lg font-semibold text-gray-900 mb-4">차량 정보</h2>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div>
                  <dt class="text-sm font-medium text-gray-500">브랜드</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @auction.vehicle.brand %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">모델</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @auction.vehicle.model %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">연식</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @auction.vehicle.year %>년</dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">주행거리</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= format_number(@auction.vehicle.mileage) %>km</dd>
                </div>
              </div>
            </div>

            <!-- 경매 정보 -->
            <div class="border-t border-gray-200 pt-6">
              <h2 class="text-lg font-semibold text-gray-900 mb-4">경매 정보</h2>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <dt class="text-sm font-medium text-gray-500">시작가</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= format_price(@auction.vehicle.starting_price) %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">최소 입찰 단위</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= format_price(@auction.increment_amount) %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">시작 시간</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @auction.start_time.strftime("%Y년 %m월 %d일 %H:%M") %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">종료 시간</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @auction.end_time.strftime("%Y년 %m월 %d일 %H:%M") %></dd>
                </div>
                <% if @auction.winner.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">낙찰자</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @auction.winner.name %></dd>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- 입찰 내역 -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">입찰 내역</h3>
            <p class="text-sm text-gray-500">총 <%= @bids.count %>건의 입찰</p>
          </div>
          <div class="p-6">
            <% if @bids.any? %>
              <div class="space-y-4 max-h-96 overflow-y-auto">
                <% @bids.each do |bid| %>
                  <div class="border border-gray-200 rounded-lg p-4">
                    <div class="flex items-center justify-between">
                      <div>
                        <div class="text-sm font-medium text-gray-900">
                          <%= bid.buyer.name %>
                        </div>
                        <div class="text-xs text-gray-500">
                          <%= bid.created_at.strftime("%m/%d %H:%M") %>
                        </div>
                      </div>
                      <div class="text-right">
                        <div class="text-lg font-bold text-green-600">
                          <%= format_price(bid.amount) %>
                        </div>
                        <% if bid == @auction.highest_bid %>
                          <div class="text-xs text-green-600">최고 입찰</div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">입찰이 없습니다</h3>
                <p class="mt-1 text-sm text-gray-500">아직 입찰이 등록되지 않았습니다.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>