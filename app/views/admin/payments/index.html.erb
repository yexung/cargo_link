<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">입금 관리</h1>
          <p class="mt-2 text-gray-600">대기 중인 입금을 확인하고 승인/거부하세요</p>
        </div>
        <div class="flex space-x-4">
          <div class="bg-white rounded-lg shadow p-4">
            <div class="text-sm font-medium text-gray-500">대기 중인 입금</div>
            <div class="text-2xl font-bold text-blue-600"><%= @total_pending %></div>
          </div>
          <div class="bg-white rounded-lg shadow p-4">
            <div class="text-sm font-medium text-gray-500">총 수수료 수익</div>
            <div class="text-2xl font-bold text-green-600"><%= format_price(@total_commission) %></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Payments List -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">입금 대기 목록</h2>
      </div>
      
      <% if @payments.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  경매 정보
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  구매자
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  입금 정보
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  입금 금액
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  입금 시간
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  상태
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  작업
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @payments.each do |payment| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= payment.auction.vehicle.display_title %>
                    </div>
                    <div class="text-sm text-gray-500">
                      경매 ID: <%= payment.auction.id %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= payment.buyer.name %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= payment.buyer.email %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if payment.bank_name.present? %>
                      <div class="text-sm font-medium text-gray-900">
                        <%= payment.depositor_name || '미입력' %>
                      </div>
                      <div class="text-sm text-gray-500">
                        <%= payment.bank_name %> | <%= payment.account_number %>
                      </div>
                      <div class="text-xs text-gray-400">
                        <%= payment.deposit_datetime&.strftime('%m/%d %H:%M') || '미입력' %>
                      </div>
                    <% else %>
                      <div class="text-sm text-gray-400">
                        입금 정보 없음
                      </div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= payment.formatted_amount %>
                    </div>
                    <div class="text-sm text-gray-500">
                      수수료: <%= payment.formatted_commission_amount %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= payment.created_at.strftime('%Y-%m-%d %H:%M') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                      대기 중
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex space-x-2">
                      <%= link_to "상세보기", admin_payment_path(payment), 
                          class: "text-blue-600 hover:text-blue-900" %>
                      <button onclick="showConfirmModal(<%= payment.id %>)" 
                              class="text-green-600 hover:text-green-900">
                        승인
                      </button>
                      <button onclick="showRejectModal(<%= payment.id %>)" 
                              class="text-red-600 hover:text-red-900">
                        거부
                      </button>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">대기 중인 입금이 없습니다</h3>
          <p class="mt-1 text-sm text-gray-500">새로운 입금이 등록되면 여기에 표시됩니다.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Confirm Modal -->
<div id="confirmModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900 mb-4">입금 승인</h3>
      <form id="confirmForm" method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        
        <div class="mb-4">
          <label for="admin_memo" class="block text-sm font-medium text-gray-700 mb-2">
            관리자 메모 (선택사항)
          </label>
          <textarea id="admin_memo" name="admin_memo" rows="3" 
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="승인 관련 메모를 입력하세요"></textarea>
        </div>
        
        <div class="flex justify-end space-x-3">
          <button type="button" onclick="hideConfirmModal()" 
                  class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200">
            취소
          </button>
          <button type="submit" 
                  class="px-4 py-2 text-sm font-medium text-white bg-green-600 rounded-md hover:bg-green-700">
            승인
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Reject Modal -->
<div id="rejectModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900 mb-4">입금 거부</h3>
      <form id="rejectForm" method="post">
        <input type="hidden" name="_method" value="patch">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        
        <div class="mb-4">
          <label for="reject_memo" class="block text-sm font-medium text-gray-700 mb-2">
            거부 사유 (필수)
          </label>
          <textarea id="reject_memo" name="admin_memo" rows="3" required
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
                    placeholder="거부 사유를 입력하세요"></textarea>
        </div>
        
        <div class="flex justify-end space-x-3">
          <button type="button" onclick="hideRejectModal()" 
                  class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200">
            취소
          </button>
          <button type="submit" 
                  class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-700">
            거부
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
function showConfirmModal(paymentId) {
  document.getElementById('confirmForm').action = `/admin/payments/${paymentId}/confirm`;
  document.getElementById('confirmModal').classList.remove('hidden');
}

function hideConfirmModal() {
  document.getElementById('confirmModal').classList.add('hidden');
}

function showRejectModal(paymentId) {
  document.getElementById('rejectForm').action = `/admin/payments/${paymentId}/reject`;
  document.getElementById('rejectModal').classList.remove('hidden');
}

function hideRejectModal() {
  document.getElementById('rejectModal').classList.add('hidden');
}
</script> 