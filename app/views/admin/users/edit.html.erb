<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">사용자 편집</h1>
          <p class="mt-2 text-gray-600">
            <%= params[:type] == 'seller' ? '판매자' : '구매자' %> 정보를 편집합니다.
          </p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "취소", admin_user_path(@user, type: params[:type]), 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </div>
    </div>

    <!-- Edit Form -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">사용자 정보 편집</h3>
      </div>
      <div class="p-6">
        <% if params[:type] == 'seller' %>
          <%= form_with(model: @user, url: admin_user_path(@user, type: 'seller'), method: :patch, local: true, class: "space-y-6") do |f| %>
            <div>
              <%= f.label :name, "이름", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <div>
              <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700" %>
              <%= f.email_field :email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <div>
              <%= f.label :phone, "전화번호", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :phone, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <div>
              <%= f.label :company_name, "회사명", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :company_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <div>
              <%= f.label :business_registration_number, "사업자 등록번호", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :business_registration_number, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <div>
              <label class="flex items-center">
                <%= f.check_box :approved, class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
                <span class="ml-2 text-sm text-gray-700">승인됨</span>
              </label>
            </div>

            <div class="flex justify-end space-x-3">
              <%= link_to "취소", admin_user_path(@user, type: 'seller'),
                  class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
              <%= f.submit "저장", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
            </div>
          <% end %>

        <% elsif params[:type] == 'buyer' %>
          <%= form_with(model: @user, url: admin_user_path(@user, type: 'buyer'), method: :patch, local: true, class: "space-y-6") do |f| %>
            <div>
              <%= f.label :name, "이름", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <div>
              <%= f.label :email, "이메일", class: "block text-sm font-medium text-gray-700" %>
              <%= f.email_field :email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <div>
              <%= f.label :phone, "전화번호", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :phone, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <div>
              <%= f.label :country, "국가", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :country, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <div>
              <label class="flex items-center">
                <%= f.check_box :approved, class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
                <span class="ml-2 text-sm text-gray-700">승인됨</span>
              </label>
            </div>

            <div class="flex justify-end space-x-3">
              <%= link_to "취소", admin_user_path(@user, type: 'buyer'),
                  class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
              <%= f.submit "저장", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>