<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">관리자 대시보드</h1>
          <p class="mt-2 text-gray-600">중고차 경매 플랫폼 관리 센터</p>
        </div>
        <div class="flex items-center space-x-4">
          <div class="bg-white px-4 py-2 rounded-lg shadow border">
            <div class="text-sm text-gray-500">현재 시간</div>
            <div class="font-medium" id="current-time"><%= Time.current.strftime('%Y-%m-%d %H:%M') %></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Sellers -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-100">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-blue-500 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
            </div>
            <div class="ml-4 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">총 판매자</dt>
                <dd class="text-2xl font-bold text-gray-900"><%= @total_sellers || 0 %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Buyers -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-100">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
            </div>
            <div class="ml-4 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">총 구매자</dt>
                <dd class="text-2xl font-bold text-gray-900"><%= @total_buyers || 0 %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Vehicles -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-100">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-purple-500 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
              </div>
            </div>
            <div class="ml-4 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">등록된 차량</dt>
                <dd class="text-2xl font-bold text-gray-900"><%= @total_vehicles || 0 %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Auctions -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-100">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-red-500 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
              </div>
            </div>
            <div class="ml-4 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">총 경매</dt>
                <dd class="text-2xl font-bold text-gray-900"><%= @total_auctions || 0 %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Withdrawal Requests Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <!-- Pending Withdrawal Requests -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-100">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-orange-500 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div class="ml-4 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">대기 중인 환전</dt>
                <dd class="text-2xl font-bold text-gray-900"><%= WithdrawalRequest.pending.count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Withdrawal Amount -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-100">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-red-500 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6 6"/>
                </svg>
              </div>
            </div>
            <div class="ml-4 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">총 환전 금액</dt>
                <dd class="text-2xl font-bold text-gray-900">
                  <%= number_with_delimiter(WithdrawalRequest.approved.sum(:amount).to_i) %>원
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Today's Withdrawal -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-100">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-teal-500 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
            </div>
            <div class="ml-4 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">오늘 환전</dt>
                <dd class="text-2xl font-bold text-gray-900">
                  <%= number_with_delimiter(WithdrawalRequest.approved.where('processed_at >= ?', Date.current.beginning_of_day).sum(:amount).to_i) %>원
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Revenue Stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <!-- Pending Payments -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-100">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-yellow-500 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div class="ml-4 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">대기 중인 입금</dt>
                <dd class="text-2xl font-bold text-gray-900"><%= @pending_payments || 0 %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Revenue with Period Filter -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-100">
        <div class="p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-indigo-500 rounded-xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <dt class="text-sm font-medium text-gray-500 truncate">
                  <%= case @period
                      when 'daily' then '오늘 수수료 수익'
                      when 'weekly' then '이번 주 수수료 수익' 
                      when 'monthly' then '이번 달 수수료 수익'
                      when 'yearly' then '올해 수수료 수익'
                      else '총 수수료 수익'
                      end %>
                </dt>
                <dd class="text-2xl font-bold text-gray-900"><%= format_price(@total_revenue || 0) %></dd>
              </div>
            </div>
            
            <!-- Period Filter Dropdown -->
            <div class="relative">
              <select id="periodFilter" onchange="changePeriod()" 
                      class="bg-white border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <option value="total" <%= 'selected' if @period == 'total' %>>전체</option>
                <option value="daily" <%= 'selected' if @period == 'daily' %>>일간</option>
                <option value="weekly" <%= 'selected' if @period == 'weekly' %>>주간</option>
                <option value="monthly" <%= 'selected' if @period == 'monthly' %>>월간</option>
                <option value="yearly" <%= 'selected' if @period == 'yearly' %>>년간</option>
              </select>
            </div>
          </div>
          
          <!-- Period Stats Grid -->
          <div class="grid grid-cols-2 md:grid-cols-5 gap-2 pt-4 border-t border-gray-100">
            <div class="text-center">
              <div class="text-xs text-gray-500">오늘</div>
              <div class="text-sm font-semibold text-indigo-600"><%= format_price(@revenue_stats[:daily] || 0) %></div>
            </div>
            <div class="text-center">
              <div class="text-xs text-gray-500">이번 주</div>
              <div class="text-sm font-semibold text-blue-600"><%= format_price(@revenue_stats[:weekly] || 0) %></div>
            </div>
            <div class="text-center">
              <div class="text-xs text-gray-500">이번 달</div>
              <div class="text-sm font-semibold text-green-600"><%= format_price(@revenue_stats[:monthly] || 0) %></div>
            </div>
            <div class="text-center">
              <div class="text-xs text-gray-500">올해</div>
              <div class="text-sm font-semibold text-purple-600"><%= format_price(@revenue_stats[:yearly] || 0) %></div>
            </div>
            <div class="text-center">
              <div class="text-xs text-gray-500">전체</div>
              <div class="text-sm font-semibold text-gray-700"><%= format_price(@revenue_stats[:total] || 0) %></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Revenue Chart -->
    <div class="mb-8">
      <div class="bg-white shadow-lg rounded-xl border border-gray-100 p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-lg font-medium text-gray-900">최근 7일 수수료 수익 추이</h3>
          <div class="text-sm text-gray-500">
            총합: <%= format_price(@daily_revenue_chart.sum { |data| data[:revenue] }) %>
          </div>
        </div>
        
        <div class="relative">
          <!-- Chart Container -->
          <div class="flex items-end justify-between h-64 space-x-2">
            <% @daily_revenue_chart.each do |data| %>
              <% max_revenue = @daily_revenue_chart.max { |a, b| a[:revenue] <=> b[:revenue] }[:revenue] %>
              <% height_percent = max_revenue > 0 ? (data[:revenue].to_f / max_revenue * 100).round : 0 %>
              
              <div class="flex flex-col items-center flex-1">
                <!-- Bar -->
                <div class="relative w-full bg-gray-200 rounded-t-md overflow-hidden" style="height: 240px;">
                  <div class="absolute bottom-0 w-full bg-gradient-to-t from-indigo-500 to-indigo-400 rounded-t-md transition-all duration-300 hover:from-indigo-600 hover:to-indigo-500" 
                       style="height: <%= height_percent %>%;"
                       title="<%= data[:date] %>: <%= format_price(data[:revenue]) %>">
                  </div>
                </div>
                
                <!-- Date Label -->
                <div class="text-xs text-gray-600 mt-2 text-center">
                  <%= data[:date] %>
                </div>
                
                <!-- Revenue Label -->
                <div class="text-xs text-gray-500 text-center">
                  <% if data[:revenue] > 0 %>
                    <%= data[:revenue] > 1000000 ? "#{(data[:revenue] / 1000000.0).round(1)}M" : "#{(data[:revenue] / 1000.0).round(0)}K" %>
                  <% else %>
                    0
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          
          <!-- Y-axis labels -->
          <div class="absolute left-0 top-0 h-64 flex flex-col justify-between text-xs text-gray-500 -ml-12">
            <% max_revenue = @daily_revenue_chart.max { |a, b| a[:revenue] <=> b[:revenue] }[:revenue] %>
            <% if max_revenue > 0 %>
              <span><%= (max_revenue / 1000000.0).round(1) %>M</span>
              <span><%= (max_revenue * 0.75 / 1000000.0).round(1) %>M</span>
              <span><%= (max_revenue * 0.5 / 1000000.0).round(1) %>M</span>
              <span><%= (max_revenue * 0.25 / 1000000.0).round(1) %>M</span>
              <span>0</span>
            <% else %>
              <span>0</span>
              <span></span>
              <span></span>
              <span></span>
              <span>0</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activities -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Recent Payments -->
      <div class="bg-white shadow-lg rounded-xl border border-gray-100">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900">최근 입금 대기 목록</h3>
            <a href="/admin/payments" class="text-indigo-600 hover:text-indigo-700 text-sm font-medium">전체 보기</a>
          </div>
        </div>
        <div class="p-6">
          <% if @recent_payments&.any? %>
            <div class="space-y-4">
              <% @recent_payments.each do |payment| %>
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                  <div>
                    <div class="font-medium text-gray-900">
                      <%= payment.buyer&.name || '구매자' %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= payment.auction&.vehicle&.title || '경매 정보 없음' %>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="font-bold text-gray-900">
                      <%= format_price(payment.total_amount || 0) %>
                    </div>
                    <div class="text-sm text-yellow-600">대기 중</div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <div class="mt-2 text-sm text-gray-500">대기 중인 입금이 없습니다</div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Recent Auctions -->
      <div class="bg-white shadow-lg rounded-xl border border-gray-100">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900">최근 등록된 경매</h3>
            <a href="/admin/auctions" class="text-indigo-600 hover:text-indigo-700 text-sm font-medium">전체 보기</a>
          </div>
        </div>
        <div class="p-6">
          <% if @recent_auctions&.any? %>
            <div class="space-y-4">
              <% @recent_auctions.each do |auction| %>
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                  <div>
                    <div class="font-medium text-gray-900">
                      <%= auction.vehicle&.title || '차량 정보 없음' %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= auction.created_at.strftime('%Y-%m-%d') %>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="font-bold text-gray-900">
                      <%= format_price(auction.current_price || 0) %>
                    </div>
                    <div class="text-sm <%= auction.status == 'active' ? 'text-green-600' : 'text-gray-500' %>">
                      <%= auction.status == 'active' ? '진행 중' : auction.status %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2-2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
              <div class="mt-2 text-sm text-gray-500">등록된 경매가 없습니다</div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-8">
      <div class="bg-white shadow-lg rounded-xl border border-gray-100 p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">빠른 작업</h3>
        <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
          <a href="/admin/payments" class="flex items-center p-4 bg-yellow-50 rounded-lg hover:bg-yellow-100 transition-colors duration-200">
            <div class="w-8 h-8 bg-yellow-500 rounded-lg flex items-center justify-center mr-3">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <div class="font-medium text-gray-900">입금 관리</div>
              <div class="text-sm text-gray-500">입금 승인/거부</div>
            </div>
          </a>

          <a href="/admin/vehicles" class="flex items-center p-4 bg-purple-50 rounded-lg hover:bg-purple-100 transition-colors duration-200">
            <div class="w-8 h-8 bg-purple-500 rounded-lg flex items-center justify-center mr-3">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
              </svg>
            </div>
            <div>
              <div class="font-medium text-gray-900">차량 관리</div>
              <div class="text-sm text-gray-500">차량 승인/거부</div>
