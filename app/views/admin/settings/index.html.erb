<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">시스템 설정</h1>
          <p class="mt-2 text-gray-600">플랫폼 운영에 필요한 설정을 관리하세요</p>
        </div>
      </div>
    </div>

    <!-- Settings Form -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">기본 설정</h2>
      </div>
      
      <%= form_with url: admin_settings_path, method: :patch, local: true, class: "p-6 space-y-6" do |form| %>
        <!-- Commission Rate -->
        <div>
          <label for="commission_rate" class="block text-sm font-medium text-gray-700 mb-2">
            수수료율 (%)
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
            <%= form.number_field :commission_rate, value: @settings[:commission_rate], step: 0.1, min: 0, max: 100,
                class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" %>
          </div>
          <p class="mt-1 text-sm text-gray-500">경매 성사 시 수수료율을 설정하세요</p>
        </div>

        <!-- Bank Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="bank_name" class="block text-sm font-medium text-gray-700 mb-2">
              은행명
            </label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                </svg>
              </div>
              <%= form.text_field :bank_name, value: @settings[:bank_name],
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" %>
            </div>
          </div>

          <div>
            <label for="bank_account" class="block text-sm font-medium text-gray-700 mb-2">
              계좌번호
            </label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                </svg>
              </div>
              <%= form.text_field :bank_account, value: @settings[:bank_account],
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" %>
            </div>
          </div>
        </div>

        <div>
          <label for="account_holder" class="block text-sm font-medium text-gray-700 mb-2">
            예금주
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <%= form.text_field :account_holder, value: @settings[:account_holder],
                class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" %>
          </div>
        </div>

        <!-- Auction Settings -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="min_bid_increment" class="block text-sm font-medium text-gray-700 mb-2">
              최소 입찰 증가액 (원)
            </label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                </svg>
              </div>
              <%= form.number_field :min_bid_increment, value: @settings[:min_bid_increment], min: 1000, step: 1000,
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" %>
            </div>
            <p class="mt-1 text-sm text-gray-500">입찰 시 최소 증가 금액을 설정하세요</p>
          </div>

          <div>
            <label for="auction_duration_hours" class="block text-sm font-medium text-gray-700 mb-2">
              기본 경매 시간 (시간)
            </label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <%= form.number_field :auction_duration_hours, value: @settings[:auction_duration_hours], min: 1, max: 168,
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200" %>
            </div>
            <p class="mt-1 text-sm text-gray-500">경매 등록 시 기본 경매 시간을 설정하세요</p>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-end">
          <%= form.submit "설정 저장", 
              class: "bg-blue-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200" %>
        </div>
      <% end %>
    </div>

    <!-- Current Settings Display -->
    <div class="mt-8 bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">현재 설정</h2>
      </div>
      
      <div class="p-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">수수료율</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @settings[:commission_rate] %>%</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">최소 입찰 증가액</dt>
            <dd class="mt-1 text-sm text-gray-900">₩<%= number_with_delimiter(@settings[:min_bid_increment]) %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">기본 경매 시간</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @settings[:auction_duration_hours] %>시간</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">은행명</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @settings[:bank_name] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">계좌번호</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @settings[:bank_account] %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">예금주</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @settings[:account_holder] %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div> 