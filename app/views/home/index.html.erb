<!-- Countdown JavaScript -->
<script>
  function updateCountdowns() {
    <% @active_auctions&.each do |auction| %>
      const endTime<%= auction.id %> = new Date('<%= auction.end_time.iso8601 %>').getTime();
      const element<%= auction.id %> = document.getElementById('countdown-<%= auction.id %>');
      
      if (element<%= auction.id %>) {
        const now = new Date().getTime();
        const distance = endTime<%= auction.id %> - now;
        
        if (distance > 0) {
          const days = Math.floor(distance / (1000 * 60 * 60 * 24));
          const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
          const seconds = Math.floor((distance % (1000 * 60)) / 1000);
          
          element<%= auction.id %>.innerHTML = days + "일 " + hours + "시 " + minutes + "분 " + seconds + "초";
        } else {
          element<%= auction.id %>.innerHTML = "경매 종료";
