<div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-100 py-12 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto">
    <div class="text-center mb-8">
      <div class="flex justify-center mb-4">
        <div class="bg-green-600 rounded-full p-3 shadow-lg">
          <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.5 1.5M7 13l1.5 1.5M17 21a2 2 0 100-4 2 2 0 000 4zM9 21a2 2 0 100-4 2 2 0 000 4z" />
          </svg>
        </div>
      </div>
      <h2 class="text-3xl font-bold text-gray-900 mb-2">구매자 회원가입</h2>
      <p class="text-gray-600">경매에 참여하고 차량을 구매하세요</p>
    </div>

    <div class="bg-white rounded-2xl shadow-xl p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "buyers/shared/error_messages", resource: resource %>

        <!-- 이메일 필드 -->
        <div>
          <%= f.label :email, "이메일 주소", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors",
              placeholder: "이메일을 입력하세요" %>
        </div>

        <!-- 비밀번호 필드 -->
        <div>
          <%= f.label :password, "비밀번호", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mb-2">최소 <%= @minimum_password_length %>자 이상</p>
          <% end %>
          <%= f.password_field :password, 
              autocomplete: "new-password",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors",
              placeholder: "비밀번호를 입력하세요" %>
        </div>

        <!-- 비밀번호 확인 필드 -->
        <div>
          <%= f.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, 
              autocomplete: "new-password",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors",
              placeholder: "비밀번호를 다시 입력하세요" %>
        </div>

        <!-- 대표자명 필드 -->
        <div>
          <%= f.label :name, "대표자명", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_field :name, 
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors",
              placeholder: "대표자명을 입력하세요" %>
        </div>

        <!-- 회사명 필드 -->
        <div>
          <%= f.label :company_name, "회사명", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_field :company_name, 
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors",
              placeholder: "회사명을 입력하세요" %>
        </div>

        <!-- 전화번호 필드 -->
        <div>
          <%= f.label :phone, "전화번호", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_field :phone, 
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors",
              placeholder: "전화번호를 입력하세요" %>
        </div>

        <!-- 사업자번호 필드 -->
        <div>
          <%= f.label :business_registration_number, "사업자번호", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_field :business_registration_number, 
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors",
              placeholder: "사업자번호를 입력하세요" %>
        </div>

        <!-- 국가 필드 -->
        <div>
          <%= f.label :country, "국가", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.select :country, 
              options_for_select([
                ['한국', '한국'],
                ['미국', '미국'],
                ['일본', '일본'],
                ['중국', '중국'],
                ['독일', '독일'],
                ['영국', '영국'],
                ['프랑스', '프랑스'],
                ['기타', '기타']
              ], @buyer&.country), 
              { prompt: '국가를 선택하세요' },
              { class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm bg-white focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors" } %>
        </div>

        <!-- 사업장주소 필드 -->
        <div>
          <%= f.label :address, "사업장주소", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_area :address, 
              rows: 3,
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors resize-none",
              placeholder: "사업장주소를 입력하세요" %>
        </div>

        <!-- 사업 유형 필드 -->
        <div>
          <%= f.label :business_type, "사업 유형", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.select :business_type, 
              options_for_select([
                ['수출업', '수출업'],
                ['딜러', '딜러'],
                ['개인구매자', '개인구매자'],
                ['기타', '기타']
              ], @buyer&.business_type), 
              { prompt: '사업 유형을 선택하세요' },
              { class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm bg-white focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors" } %>
        </div>

        <!-- 회원가입 버튼 -->
        <div>
          <%= f.submit "회원가입", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors shadow-lg" %>
        </div>
      <% end %>

      <!-- 링크 섹션 -->
      <div class="mt-6 text-center space-y-2">
        <%= render "buyers/shared/links" %>
      </div>
    </div>

    <!-- 판매자 회원가입 링크 -->
    <div class="text-center mt-6">
      <p class="text-gray-600">
        판매자이신가요? 
        <%= link_to "판매자 회원가입", new_seller_registration_path, 
            class: "font-medium text-blue-600 hover:text-blue-500 transition-colors" %>
      </p>
    </div>
  </div>
</div>
