<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">내 입찰 내역</h1>
          <p class="mt-2 text-gray-600">참여한 경매의 입찰 내역을 확인하세요.</p>
        </div>
        <div class="flex space-x-4">
          <%= link_to "대시보드", buyers_dashboard_path, 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <%= link_to "경매 참여", auctions_path, 
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
        </div>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">총 입찰 수</dt>
                <dd class="text-lg font-semibold text-gray-900"><%= @total_bids_count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">낙찰 성공</dt>
                <dd class="text-lg font-semibold text-gray-900"><%= @won_bids_count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">진행 중</dt>
                <dd class="text-lg font-semibold text-gray-900"><%= @active_bids_count %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bids List -->
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h3 class="text-lg leading-6 font-medium text-gray-900">입찰 내역</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">최신 입찰부터 표시됩니다.</p>
      </div>

      <% if @bids.any? %>
        <ul class="divide-y divide-gray-200">
          <% @bids.each do |bid| %>
            <li class="px-4 py-4 sm:px-6 hover:bg-gray-50">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <% if bid.auction.vehicle.images.attached? && bid.auction.vehicle.images.any? %>
                      <%= image_tag rails_blob_path(bid.auction.vehicle.images.first, only_path: true), 
                          class: "h-16 w-16 rounded-lg object-cover" %>
                    <% else %>
                      <div class="h-16 w-16 rounded-lg bg-gray-200 flex items-center justify-center">
                        <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                      </div>
                    <% end %>
                  </div>
                  <div class="ml-4">
                    <div class="flex items-center">
                      <h4 class="text-sm font-medium text-gray-900">
                        <%= link_to bid.auction.vehicle.title, auction_path(bid.auction), 
                            class: "hover:text-green-600" %>
                      </h4>
                      <% if bid.auction.winner == current_buyer %>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          낙찰
                        </span>
                      <% elsif bid.is_winning_bid? && bid.auction.active? %>
                        <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          최고가
                        </span>
                      <% end %>
                    </div>
                    <div class="mt-1">
                      <p class="text-sm text-gray-600">
                        입찰가: <span class="font-semibold">₩<%= number_with_delimiter(bid.amount) %></span>
                      </p>
                      <p class="text-xs text-gray-500">
                        <%= bid.bid_time.strftime("%Y년 %m월 %d일 %H:%M") %>
                      </p>
                    </div>
                  </div>
                </div>
                <div class="flex items-center space-x-4">
                  <div class="text-right">
                    <p class="text-sm text-gray-900">현재가: ₩<%= number_with_delimiter(bid.auction.current_price) %></p>
                    <p class="text-xs text-gray-500">
                      상태: 
                      <% case bid.auction.status %>
                      <% when 'active' %>
                        <span class="text-green-600">진행중</span>
                      <% when 'ended' %>
                        <span class="text-red-600">종료</span>
                      <% when 'upcoming' %>
                        <span class="text-yellow-600">예정</span>
                      <% else %>
                        <span class="text-gray-600"><%= bid.auction.status %></span>
                      <% end %>
                    </p>
                  </div>
                  <div>
                    <%= link_to "상세보기", buyers_bid_path(bid), 
                        class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>

        <!-- 더 많은 결과가 있을 경우 안내 -->
        <% if @bids.count >= 50 %>
          <div class="px-4 py-3 border-t border-gray-200">
            <p class="text-sm text-gray-500 text-center">
              최근 50개의 입찰만 표시됩니다. 더 많은 내역을 보려면 관리자에게 문의하세요.
            </p>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">입찰 내역이 없습니다</h3>
          <p class="mt-1 text-sm text-gray-500">첫 번째 경매에 참여해보세요.</p>
          <div class="mt-6">
            <%= link_to "경매 보기", auctions_path, 
                class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div> 