<%# 판매자 P2P 거래 관리 페이지 %>
<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- 헤더 -->
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">P2P 거래 관리</h1>
        <p class="mt-2 text-gray-600">등록한 P2P 거래를 관리하고 상태를 업데이트하세요</p>
      </div>
      <%= link_to "새 거래 등록", "https://cargolink.cc/trades/new", 
          class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors" %>
    </div>

    <!-- 필터 섹션 -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
      <%= form_with url: sellers_trades_path, method: :get, local: true, class: "flex gap-4 items-end" do |form| %>
        <div>
          <%= form.label :status, "상태", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :status, options_for_select([
                ['전체', ''],
                ['거래 가능', 'active'],
                ['거래 완료', 'completed']
              ], params[:status]), 
              {}, { class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" } %>
        </div>
        
        <div>
          <%= form.submit "필터 적용", class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors" %>
        </div>
        
        <% if params[:status].present? %>
          <div>
            <%= link_to "초기화", sellers_trades_path, class: "bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300 transition-colors" %>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- 거래 목록 -->
    <% if @trades.any? %>
      <div class="bg-white rounded-lg shadow-sm border overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">차량 정보</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">가격</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">상태</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">등록일</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">액션</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @trades.each do |trade| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <% if trade.images.attached? %>
                        <div class="flex-shrink-0 h-12 w-12">
                          <%= image_tag trade.images.first, class: "h-12 w-12 rounded-lg object-cover" %>
                        </div>
                      <% else %>
                        <div class="flex-shrink-0 h-12 w-12 bg-gray-200 rounded-lg flex items-center justify-center">
                          <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                        </div>
                      <% end %>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900">
                          <%= link_to trade.title, sellers_trade_path(trade), class: "hover:text-green-600" %>
                        </div>
                        <div class="text-sm text-gray-500">
                          <%= trade.year %>년 <%= trade.brand %> <%= trade.model %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= trade.formatted_price %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                      <%= trade.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                      <%= trade.active? ? '거래 가능' : '거래 완료' %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= trade.created_at.strftime('%Y년 %m월 %d일') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                    <%= link_to "보기", sellers_trade_path(trade), 
                        class: "text-blue-600 hover:text-blue-900" %>
                    
                    <% if trade.active? %>
                      <%= link_to "수정", edit_sellers_trade_path(trade), 
                          class: "text-indigo-600 hover:text-indigo-900" %>
                      <%= button_to "완료", complete_trade_sellers_trade_path(trade), 
                          method: :patch,
                          data: { turbo_confirm: "정말로 이 거래를 완료로 표시하시겠습니까?" },
                          class: "text-green-600 hover:text-green-900 border-0 bg-transparent p-0 underline" %>
                    <% end %>
                    
                    <%= button_to "삭제", sellers_trade_path(trade), 
                        method: :delete,
                        data: { turbo_confirm: "정말로 이 거래를 삭제하시겠습니까?" },
                        class: "text-red-600 hover:text-red-900 border-0 bg-transparent p-0 underline" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- 페이지네이션 -->
      <% if @trades.respond_to?(:current_page) %>
        <div class="mt-8 flex justify-center">
          <%= paginate @trades %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-16">
        <div class="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">등록된 P2P 거래가 없습니다</h3>
        <p class="text-gray-600 mb-6">첫 번째 P2P 거래를 등록해보세요!</p>
        <%= link_to "P2P 거래 등록하기", "https://cargolink.cc/trades/new", 
            class: "inline-flex items-center px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors duration-200" %>
      </div>
    <% end %>
  </div>
</div>