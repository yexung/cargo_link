<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- 헤더 섹션 -->
    <div class="text-center">
      <div class="flex justify-center mb-6">
        <div class="bg-blue-600 rounded-full p-4 shadow-lg">
          <svg class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
      </div>
      <h2 class="text-3xl font-bold text-gray-900 mb-2">🚗 판매자 로그인</h2>
      <p class="text-gray-600">차량을 등록하고 경매에 참여하세요</p>
    </div>

    <!-- 로그인 폼 -->
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <!-- 이메일 필드 -->
        <div>
          <%= f.label :email, "이메일", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
              placeholder: "이메일을 입력하세요" %>
        </div>

        <!-- 비밀번호 필드 -->
        <div>
          <%= f.label :password, "비밀번호", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.password_field :password, 
              autocomplete: "current-password",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
              placeholder: "비밀번호를 입력하세요" %>
        </div>

        <!-- 기억하기 체크박스 -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, "로그인 상태 유지", class: "ml-2 block text-sm text-gray-700" %>
          </div>
        <% end %>

        <!-- 로그인 버튼 -->
        <div>
          <%= f.submit "로그인", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors shadow-lg" %>
        </div>
      <% end %>

      <!-- 링크 섹션 -->
      <div class="mt-6 space-y-3">
        <div class="text-center">
          <%= link_to "회원가입", new_seller_registration_path, 
              class: "text-blue-600 hover:text-blue-500 font-medium transition-colors" %>
        </div>
        
        <div class="text-center">
          <%= link_to "비밀번호를 잊으셨나요?", new_seller_password_path, 
              class: "text-sm text-gray-600 hover:text-gray-500 transition-colors" %>
        </div>
      </div>
    </div>

    <!-- 구매자 로그인 링크 -->
    <div class="text-center">
      <p class="text-gray-600">
        구매자이신가요? 
        <%= link_to "구매자 로그인", new_buyer_session_path, 
            class: "font-medium text-green-600 hover:text-green-500 transition-colors" %>
      </p>
    </div>
  </div>
</div> 