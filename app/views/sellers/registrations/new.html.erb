<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto">
    <div class="text-center mb-8">
      <div class="flex justify-center mb-4">
        <div class="bg-blue-600 rounded-full p-3 shadow-lg">
          <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
      </div>
      <h2 class="text-3xl font-bold text-gray-900 mb-2">판매자 회원가입</h2>
      <p class="text-gray-600">차량을 등록하고 경매에 참여하세요</p>
    </div>

    <div class="bg-white rounded-2xl shadow-xl p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "sellers/shared/error_messages", resource: resource %>

        <!-- 이메일 필드 -->
        <div>
          <%= f.label :email, "이메일 주소", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
              placeholder: "이메일을 입력하세요" %>
        </div>

        <!-- 비밀번호 필드 -->
        <div>
          <%= f.label :password, "비밀번호", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mb-2">최소 <%= @minimum_password_length %>자 이상</p>
          <% end %>
          <%= f.password_field :password, 
              autocomplete: "new-password",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
              placeholder: "비밀번호를 입력하세요" %>
        </div>

        <!-- 비밀번호 확인 필드 -->
        <div>
          <%= f.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, 
              autocomplete: "new-password",
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
              placeholder: "비밀번호를 다시 입력하세요" %>
        </div>

        <!-- 이름 필드 -->
        <div>
          <%= f.label :name, "이름", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_field :name, 
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
              placeholder: "이름을 입력하세요" %>
        </div>

        <!-- 전화번호 필드 -->
        <div>
          <%= f.label :phone, "전화번호", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_field :phone, 
              class: "appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
              placeholder: "전화번호를 입력하세요" %>
        </div>

        <!-- 회원가입 버튼 -->
        <div>
          <%= f.submit "회원가입", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors shadow-lg" %>
        </div>
      <% end %>

      <!-- 링크 섹션 -->
      <div class="mt-6 text-center space-y-2">
        <%= render "sellers/shared/links" %>
      </div>
    </div>

    <!-- 구매자 회원가입 링크 -->
    <div class="text-center mt-6">
      <p class="text-gray-600">
        구매자이신가요? 
        <%= link_to "구매자 회원가입", new_buyer_registration_path, 
            class: "font-medium text-green-600 hover:text-green-500 transition-colors" %>
      </p>
    </div>
  </div>
</div>
