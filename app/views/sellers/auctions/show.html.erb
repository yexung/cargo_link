<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @auction.vehicle.title %></h1>
          <p class="mt-2 text-gray-600">경매 관리</p>
        </div>
        <div class="flex space-x-3">
          <% if @auction.active? %>
            <%= link_to "경매 종료", end_auction_sellers_auction_path(@auction), 
                method: :patch, 
                data: { 
                  confirm: "경매를 종료하시겠습니까?",
                  turbo_confirm: "경매를 종료하시겠습니까?"
                },
                class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" %>
          <% end %>
          <%= link_to "수정", edit_sellers_auction_path(@auction), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </div>
    </div>

    <!-- Auction Status -->
    <div class="mb-6">
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-medium text-gray-900">경매 상태</h3>
            <div class="mt-2 flex items-center space-x-4">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium 
                <%= case @auction.status
                    when 'upcoming' then 'bg-yellow-100 text-yellow-800'
                    when 'active' then 'bg-green-100 text-green-800'
                    when 'ended' then 'bg-blue-100 text-blue-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= case @auction.status
                    when 'upcoming' then '시작 예정'
                    when 'active' then '진행 중'
                    when 'ended' then '종료됨'
                    else @auction.status
                    end %>
              </span>
              <span class="text-sm text-gray-500">
                <%= @auction.start_time.strftime("%Y-%m-%d %H:%M") %> ~ <%= @auction.end_time.strftime("%Y-%m-%d %H:%M") %>
              </span>
            </div>
          </div>
          <div class="text-right">
            <div class="text-sm text-gray-500">현재 입찰가</div>
            <div class="text-2xl font-bold text-blue-600">
              <% if @auction.bids.any? %>
                ₩<%= number_with_delimiter(@auction.bids.maximum(:amount)) %>
              <% else %>
                ₩<%= number_with_delimiter(@auction.reserve_price) %>
              <% end %>
            </div>
            <div class="text-sm text-gray-500"><%= @auction.bids.count %>명 입찰</div>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Vehicle Info -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">차량 정보</h3>
        </div>
        <div class="p-6">
          <% if @auction.vehicle.images.attached? && @auction.vehicle.images.any? %>
            <div class="mb-4">
              <%= image_tag rails_blob_path(@auction.vehicle.images.first, only_path: true), class: "w-full h-48 object-cover rounded-lg" %>
            </div>
          <% end %>
          
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-600">차량명:</span>
              <span class="font-medium"><%= @auction.vehicle.title %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">제조사/모델:</span>
              <span class="font-medium"><%= @auction.vehicle.brand %> <%= @auction.vehicle.model %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">연식:</span>
              <span class="font-medium"><%= @auction.vehicle.year %>년</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">주행거리:</span>
              <span class="font-medium"><%= number_with_delimiter(@auction.vehicle.mileage) %>km</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Auction Details -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">경매 정보</h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div class="flex justify-between">
              <span class="text-gray-600">최소 입찰가:</span>
              <span class="font-medium">₩<%= number_with_delimiter(@auction.reserve_price) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">시작 시간:</span>
              <span class="font-medium"><%= @auction.start_time.strftime("%m/%d %H:%M") %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">종료 시간:</span>
              <span class="font-medium"><%= @auction.end_time.strftime("%m/%d %H:%M") %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">등록일:</span>
              <span class="font-medium"><%= @auction.created_at.strftime("%m/%d %H:%M") %></span>
            </div>
          </div>

          <% if @auction.vehicle_description.present? %>
            <div class="mt-6">
              <h4 class="text-sm font-medium text-gray-900 mb-2">차량 설명</h4>
              <div class="bg-gray-50 rounded-lg p-3">
                <p class="text-sm text-gray-700 whitespace-pre-wrap"><%= @auction.vehicle_description %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Bids List -->
    <% if @auction.bids.any? %>
      <div class="mt-8 bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">입찰 내역</h3>
        </div>
        <div class="overflow-hidden">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">입찰자</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">입찰가</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">입찰 시간</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @auction.bids.includes(:buyer).order(amount: :desc).each do |bid| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= bid.buyer.name %></div>
                    <div class="text-sm text-gray-500"><%= bid.buyer.email %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">₩<%= number_with_delimiter(bid.amount) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= bid.created_at.strftime("%m/%d %H:%M:%S") %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>

    <!-- Actions -->
    <div class="mt-8 flex justify-between">
      <%= link_to "목록으로", sellers_dashboard_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
      
      <div class="flex space-x-3">
        <%= link_to "수정", edit_sellers_auction_path(@auction), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        <%= button_to "삭제", sellers_auction_path(@auction), 
            method: :delete, 
            data: { 
              confirm: "정말 삭제하시겠습니까?",
              turbo_confirm: "정말 삭제하시겠습니까?"
            },
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" %>
      </div>
    </div>
  </div>
</div> 