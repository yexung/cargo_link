<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-900">판매자 대시보드</h1>
            <p class="mt-1 text-sm text-gray-600">안녕하세요, <%= current_seller.name %>님! 차량과 경매를 관리하세요.</p>
          </div>
          <div class="flex space-x-3">
            <%= link_to "차량 및 경매 등록", "https://cargolink.cc/vehicles/new", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <%= link_to "P2P 거래 관리", "https://cargolink.cc/trades/new", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
            <%= link_to "환전 관리", withdrawal_requests_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Balance Info -->
    <div class="bg-gradient-to-r from-orange-400 to-orange-600 rounded-lg shadow-lg mb-8">
      <div class="p-6 text-white">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-lg font-medium">현재 잔고</h2>
            <p class="text-3xl font-bold"><%= current_seller.formatted_balance %></p>
            <p class="text-sm opacity-90">환전 가능 금액</p>
          </div>
          <div class="text-right">
            <% if current_seller.can_request_withdrawal? %>
              <%= link_to "환전 신청", new_withdrawal_request_path, 
                  class: "inline-flex items-center px-4 py-2 bg-white text-orange-600 font-medium rounded-md hover:bg-gray-100 transition-colors duration-200" %>
            <% else %>
              <span class="inline-flex items-center px-4 py-2 bg-orange-500 text-white text-sm rounded-md">
                <% if current_seller.balance <= 0 %>
                  환전 가능 금액 없음
                <% else %>
                  처리 대기 중인 신청 있음
                <% end %>
              </span>
            <% end %>
          </div>
        </div>
        <div class="mt-4 grid grid-cols-3 gap-4 text-sm">
          <div>
            <p class="opacity-80">총 판매 수익</p>
            <p class="font-semibold"><%= number_with_delimiter(current_seller.total_earnings.to_i) %>원</p>
          </div>
          <div>
            <p class="opacity-80">총 환전 금액</p>
            <p class="font-semibold"><%= number_with_delimiter(current_seller.total_withdrawn.to_i) %>원</p>
          </div>
          <div>
            <p class="opacity-80">환전 신청</p>
            <p class="font-semibold"><%= current_seller.withdrawal_requests.count %>건</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Vehicles -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">총 등록 차량</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @total_vehicles %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Active Vehicles -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">활성 차량</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @active_vehicles %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Auctions -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">총 경매</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @total_auctions %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Earnings -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">총 수익</dt>
                <dd class="text-lg font-medium text-gray-900">₩<%= number_with_delimiter(@total_earnings) %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- P2P Trade Stats -->
    <div class="bg-gradient-to-r from-purple-500 to-purple-600 rounded-lg shadow-lg mb-8">
      <div class="p-6 text-white">
        <h2 class="text-lg font-medium mb-4">P2P 거래 현황</h2>
        <div class="grid grid-cols-3 gap-4 text-sm">
          <div>
            <p class="opacity-80">총 P2P 거래</p>
            <p class="font-semibold text-xl"><%= @total_trades %>건</p>
          </div>
          <div>
            <p class="opacity-80">진행 중인 거래</p>
            <p class="font-semibold text-xl"><%= @active_trades %>건</p>
          </div>
          <div>
            <p class="opacity-80">완료된 거래</p>
            <p class="font-semibold text-xl"><%= @completed_trades %>건</p>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Recent Vehicles -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900">최근 등록 차량</h3>
            <%= link_to "모든 차량 보기", "#", class: "text-sm text-blue-600 hover:text-blue-900" %>
          </div>
        </div>
        <div class="p-6">
          <% if @recent_vehicles.any? %>
            <div class="space-y-4">
              <% @recent_vehicles.each do |vehicle| %>
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                  <div class="flex items-center">
                    <div class="flex-shrink-0">
                      <% if vehicle.images.attached? && vehicle.images.any? %>
                        <%= image_tag rails_blob_path(vehicle.images.first, only_path: true), class: "h-12 w-12 rounded-lg object-cover" %>
                      <% else %>
                        <div class="h-12 w-12 bg-gray-300 rounded-lg flex items-center justify-center">
                          <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                          </svg>
                        </div>
                      <% end %>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900"><%= vehicle.title %></div>
                      <div class="text-sm text-gray-500">₩<%= number_with_delimiter(vehicle.starting_price) %></div>
                    </div>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                      <%= vehicle.active? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                      <%= vehicle.active? ? '활성' : '대기중' %>
                    </span>
                    <%= link_to "보기", sellers_vehicle_path(vehicle), class: "text-blue-600 hover:text-blue-900 text-sm" %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">등록된 차량이 없습니다</h3>
              <p class="mt-1 text-sm text-gray-500">첫 번째 차량을 등록해보세요</p>
              <div class="mt-6">
                <%= link_to "차량 등록하기", "https://cargolink.cc/vehicles/new", class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Recent P2P Trades -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900">최근 P2P 거래</h3>
            <%= link_to "P2P 거래 관리", "https://cargolink.cc/trades/new", class: "text-sm text-blue-600 hover:text-blue-900" %>
          </div>
        </div>
        <div class="p-6">
          <% if @recent_trades.any? %>
            <div class="space-y-4">
              <% @recent_trades.each do |trade| %>
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                  <div class="flex items-center">
                    <div class="flex-shrink-0">
                      <% if trade.images.attached? && trade.images.any? %>
                        <%= image_tag trade.images.first, class: "h-12 w-12 rounded-lg object-cover" %>
                      <% else %>
                        <div class="h-12 w-12 bg-gray-300 rounded-lg flex items-center justify-center">
                          <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                          </svg>
                        </div>
                      <% end %>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900"><%= trade.title %></div>
                      <div class="text-sm text-gray-500">₩<%= number_with_delimiter(trade.price) %></div>
                      <div class="text-xs text-gray-400">
                        <%= trade.created_at.strftime("%m/%d") %>
                      </div>
                    </div>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                      <%= trade.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                      <%= trade.status == 'active' ? '진행중' : '완료' %>
                    </span>
                    <%= link_to "보기", sellers_trade_path(trade), class: "text-blue-600 hover:text-blue-900 text-sm" %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">등록된 P2P 거래가 없습니다</h3>
              <p class="mt-1 text-sm text-gray-500">첫 번째 P2P 거래를 등록해보세요</p>
              <div class="mt-6">
                <%= link_to "P2P 거래 등록", new_trade_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Current Auctions Section -->
    <div class="mt-8 bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-medium text-gray-900">진행 중인 경매</h3>
          <%= link_to "모든 경매 보기", "#", class: "text-sm text-blue-600 hover:text-blue-900" %>
        </div>
      </div>
      <div class="p-6">
        <% if @current_auctions.any? %>
          <div class="space-y-4">
            <% @current_auctions.each do |auction| %>
              <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                <div>
                  <div class="text-sm font-medium text-gray-900"><%= auction.vehicle.title %></div>
                  <div class="text-sm text-gray-500">
                    <% if auction.bids.any? %>
                      현재가: ₩<%= number_with_delimiter(auction.bids.maximum(:amount)) %>
                    <% else %>
                      시작가: ₩<%= number_with_delimiter(auction.reserve_price) %>
                    <% end %>
                  </div>
                  <div class="text-xs text-gray-400">
                    <%= auction.end_time.strftime("%m/%d %H:%M") %>까지
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    진행중
                  </span>
                  <%= link_to "보기", sellers_auction_path(auction), class: "text-blue-600 hover:text-blue-900 text-sm" %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">진행 중인 경매가 없습니다</h3>
            <p class="mt-1 text-sm text-gray-500">차량을 등록한 후 경매를 시작해보세요</p>
            <div class="mt-6">
              <%= link_to "차량 등록하기", "https://cargolink.cc/vehicles/new", class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Ended Auctions -->
    <% if @recent_ended_auctions.any? %>
      <div class="mt-8 bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">최근 종료된 경매</h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <% @recent_ended_auctions.each do |auction| %>
              <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                <div>
                  <div class="text-sm font-medium text-gray-900"><%= auction.vehicle.title %></div>
                  <div class="text-sm text-gray-500">
                    <% if auction.winner %>
                      낙찰가: ₩<%= number_with_delimiter(auction.bids.maximum(:amount)) %>
                    <% else %>
                      유찰
                    <% end %>
                  </div>
                  <div class="text-xs text-gray-400">
                    <%= auction.end_time.strftime("%m/%d %H:%M") %> 종료
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                    <%= auction.winner ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
                    <%= auction.winner ? '낙찰' : '유찰' %>
                  </span>
                  <%= link_to "보기", sellers_auction_path(auction), class: "text-blue-600 hover:text-blue-900 text-sm" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
