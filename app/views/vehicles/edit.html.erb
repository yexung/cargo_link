<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">차량 정보 수정</h1>
          <p class="mt-2 text-gray-600">차량 정보를 수정하세요</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "취소", vehicle_path(@vehicle), 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </div>
    </div>

    <!-- Current Vehicle Info -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
      <h3 class="text-lg font-medium text-blue-900">현재 차량 정보</h3>
      <p class="text-blue-800"><%= @vehicle.display_title %></p>
      <p class="text-sm text-blue-600 mt-1">
        상태: 
        <% case @vehicle.status %>
        <% when 'pending' %>
          <span class="text-yellow-600">승인 대기</span>
        <% when 'active' %>
          <span class="text-green-600">승인됨</span>
        <% when 'sold' %>
          <span class="text-blue-600">판매됨</span>
        <% when 'rejected' %>
          <span class="text-red-600">거부됨</span>
        <% end %>
      </p>
    </div>

    <!-- Edit Form -->
    <div class="bg-white shadow-sm rounded-lg">
      <%= form_with model: @vehicle, local: true, multipart: true, class: "space-y-6 p-6" do |form| %>
        <% if @vehicle.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">오류가 발생했습니다</h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @vehicle.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Basic Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :title, "차량명", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div>
            <%= form.label :brand, "제조사", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :brand, options_for_select([
              ['현대', 'hyundai'],
              ['기아', 'kia'],
              ['BMW', 'bmw'],
              ['벤츠', 'mercedes'],
              ['아우디', 'audi'],
              ['토요타', 'toyota'],
              ['혼다', 'honda'],
              ['기타', 'other']
            ], @vehicle.brand), { prompt: '제조사를 선택하세요' }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <div>
            <%= form.label :model, "모델", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :model, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div>
            <%= form.label :year, "연식", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :year, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", min: 1990, max: Date.current.year %>
          </div>

          <div>
            <%= form.label :mileage, "주행거리 (km)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :mileage, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", min: 0 %>
          </div>

          <div>
            <%= form.label :fuel_type, "연료 타입", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :fuel_type, options_for_select([
              ['가솔린', 'gasoline'],
              ['디젤', 'diesel'],
              ['하이브리드', 'hybrid'],
              ['전기', 'electric'],
              ['LPG', 'lpg']
            ], @vehicle.fuel_type), { prompt: '연료 타입을 선택하세요' }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <div>
            <%= form.label :transmission, "변속기", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :transmission, options_for_select([
              ['자동', 'automatic'],
              ['수동', 'manual'],
              ['CVT', 'cvt']
            ], @vehicle.transmission), { prompt: '변속기를 선택하세요' }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <div>
            <%= form.label :color, "색상", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :color, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div>
            <%= form.label :starting_price, "시작 가격 (원)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :starting_price, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", min: 0 %>
          </div>

          <div>
            <%= form.label :reserve_price, "최소 낙찰가 (원)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :reserve_price, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", min: 0 %>
          </div>

          <div>
            <%= form.label :location, "위치", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :location, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>

        <!-- Description -->
        <div>
          <%= form.label :description, "상세 설명", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Current Images -->
        <% if @vehicle.images.attached? %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">현재 사진</label>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
              <% @vehicle.images.each do |image| %>
                <div class="relative">
                  <%= image_tag image, class: "w-full h-24 object-cover rounded-lg" %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Images -->
        <div>
          <%= form.label :images, "새 사진 추가", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.file_field :images, multiple: true, accept: "image/*", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          <p class="mt-1 text-sm text-gray-500">새로운 사진을 추가하면 기존 사진과 함께 저장됩니다. (JPG, PNG)</p>
        </div>

        <!-- Warning for Active Auctions -->
        <% if @vehicle.has_active_auction? %>
          <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-yellow-800">진행 중인 경매가 있습니다</h3>
                <p class="mt-1 text-sm text-yellow-700">
                  현재 이 차량으로 진행 중인 경매가 있어 일부 정보는 수정할 수 없습니다.
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Action Buttons -->
        <div class="flex justify-end space-x-4 pt-6 border-t">
          <%= link_to "취소", vehicle_path(@vehicle), 
              class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= form.submit "수정 완료", 
              class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
